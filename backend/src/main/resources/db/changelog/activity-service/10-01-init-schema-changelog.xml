<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="init-schema-activity" author="rassafel">
        <createTable tableName="activity">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_activity"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="lat" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="lon" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(80)">
                <constraints nullable="false"/>
            </column>
            <column name="image_url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="label_url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="building_id" type="BIGINT"/>
            <column name="duration" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="interaction" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="CLOB">
                <constraints nullable="false"/>
            </column>
            <column name="media_urls" type="CLOB">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="building_id"
                                 baseTableName="activity"
                                 constraintName="fk_activity_building_id"
                                 referencedColumnNames="id"
                                 referencedTableName="place"/>

        <createTable tableName="activity_scheduled">
            <column name="status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="activity_id" type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_activity_scheduled"/>
            </column>
            <column name="date_time" type="DATETIME">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_activity_scheduled"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="activity_id"
                                 baseTableName="activity_scheduled"
                                 constraintName="fk_activity_scheduled_activity_id"
                                 referencedColumnNames="id"
                                 referencedTableName="activity"/>
    </changeSet>
</databaseChangeLog>